<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="180dp">
    <FrameLayout
        android:background="#0a39bc"
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <TextView
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/mathematicaloperations"/>
        </FrameLayout>

    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <TextView  
    android:id="@+id/textViewAverage"
    android:layout_width="110dp"  
    android:layout_height="wrap_content"   
    android:textSize="14dp" 
    android:textColor="@android:color/black" /> 
        
    <TextView  
    android:id="@+id/textViewMin"
    android:layout_marginLeft="10dp"
    android:layout_width="110dp"  
    android:layout_height="wrap_content"   
    android:textSize="14dp" 
    android:textColor="@android:color/black" /> 

    <TextView  
    android:id="@+id/textViewMax"
    android:layout_marginLeft="10dp"
    android:layout_width="110dp"  
    android:layout_height="wrap_content"   
    android:textSize="14dp" 
    android:textColor="@android:color/black" /> 
    </LinearLayout>
    
        <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@android:color/black"/>

    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <TextView  
    android:layout_width="wrap_content"  
    android:layout_height="wrap_content"   
    android:text="@string/firstnumber"
    android:textSize="14dp" 
    android:textColor="@android:color/black" /> 
        
    <TextView  
    android:layout_marginLeft="10dp"
    android:layout_width="wrap_content"  
    android:layout_height="wrap_content"   
    android:text="@string/secondnumber"
    android:textSize="14dp" 
    android:textColor="@android:color/black" /> 

    <TextView  
    android:layout_marginLeft="10dp"
    android:layout_width="wrap_content"  
    android:layout_height="wrap_content"   
    android:text="@string/textoperation"
    android:textSize="14dp" 
    android:textColor="@android:color/black" /> 

        <TextView  
    android:layout_marginLeft="10dp"
    android:layout_width="wrap_content"  
    android:layout_height="wrap_content"   
    android:text="@string/textresult"
    android:textSize="14dp" 
    android:textColor="@android:color/black" /> 

        </LinearLayout>
</LinearLayout>
